@using PokeApiNet

@if (Pokemon is not null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar>@Pokemon.Name[0]</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@Pokemon.Name</MudText>
                <MudText Typo="Typo.body1">@GetPokemonTypeNames(Pokemon)</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudImage ObjectFit="ObjectFit.ScaleDown" Width="100" Src="@Pokemon.Sprites.FrontDefault" Elevation="25" Class="rounded-lg" />
            <MudImage ObjectFit="ObjectFit.ScaleDown" Width="100" Src="@Pokemon.Sprites.BackDefault" Elevation="25" Class="rounded-lg" />
        </MudCardContent>
    </MudCard>
}
