@page "/pokemons"

@using Develix.Pokemons.State.PokedexUseCase
@using Develix.Pokemons.UI.Blazor.Components

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@inject IDispatcher dispatcher;
@inject IState<PokedexState> pokedexState;

<MudButton  Disabled="GetPokemonDisabled()" OnClick="GetPokemon">
    @if( pokedexState.Value.IsLoading)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        <MudText Class="ms-2">Loading</MudText>
    }
    else
    {
        <MudText>Get Pokekon #@pokedexId</MudText>
    }
</MudButton>

<MudNumericField @bind-Value="pokedexId"></MudNumericField>

<PokemonCard Pokemon="pokedexState.Value.Pokemon" />

@code {

    private int pokedexId = 1;

    private void GetPokemon()
    {
        var action = new GetPokemonAction(pokedexId);
        dispatcher.Dispatch(action);
    }

    private bool GetPokemonDisabled() => pokedexState.Value.IsLoading;
}